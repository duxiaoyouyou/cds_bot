  I_HCM_ESSFamilyMember.HCMInfoTypeRecordHasText, //ITXEX
  I_HCM_ESSFamilyMember.HCMInfoTypeRecordScreenCtrl, //ITBLD
  I_HCM_ESSFamilyMember.HCMSubtypeText,
